{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@project/account-config": ["libs/account/config/src/index.ts"],
      "@project/account-notify": ["libs/account/notify/src/index.ts"],
      "@project/authentication": ["libs/account/authentication/src/index.ts"],
      "@project/blog-models": ["libs/blog/models/src/index.ts"],
      "@project/blog-user": ["libs/account/blog-user/src/index.ts"],
      "@project/blog/comment": ["libs/blog/comment/src/index.ts"],
      "@project/blog/post": ["libs/blog/post/src/index.ts"],
      "@project/data-access": ["libs/shared/data-access/src/index.ts"],
      "@project/email-subscriber": [
        "libs/notify/email-subscriber/src/index.ts"
      ],
      "@project/file-vault-config": ["libs/file-vault/config/src/index.ts"],
      "@project/file-vault-uploader": [
        "libs/file-vault/file-uploader/src/index.ts"
      ],
      "@project/interceptors": ["libs/shared/interceptors/src/index.ts"],
      "@project/notify-config": ["libs/notify/config/src/index.ts"],
      "@project/pipes": ["libs/shared/pipes/src/index.ts"],
      "@project/shared/core": ["libs/shared/core/src/index.ts"],
      "@project/shared/helpers": ["libs/shared/helpers/src/index.ts"],
      "@project/tag": ["libs/blog/tag/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
